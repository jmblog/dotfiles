{
  "run_list": [
    "recipe[homebrew]",
    "recipe[dotfiles]"
  ],
  
  "brew": {
    "packages": [
      "coreutils",
      "ack",
      "bash-completion",
      "tree",
      "wget",
      "colordiff",
      "phantomjs"
    ]
  },

  "copies": {
    "git/gitconfig":     ".gitconfig"
  },
   
  "links": { 
    "bash/bashrc":       ".bashrc",
    "bash/bash_profile": ".bash_profile",
    "git/gitattributes": ".gitattributes",
    "git/gitignore":     ".gitignore",
    "vim":               ".vim",
    "vim/vimrc":         ".vimrc"
  },

  "nodejs": {
    "versions": [
      "v0.10.10"
    ],
    "use": "v0.10.10",
    "packages": [
      { "pkg": "bower",      "cmd": "bower"},
      { "pkg": "grunt-cli",  "cmd": "grunt"},
      { "pkg": "grunt-init", "cmd": "grunt-init"},
      { "pkg": "jshint",     "cmd": "jshint"},
      { "pkg": "uglify-js",  "cmd": "uglifyjs"},
      { "pkg": "yo",         "cmd": "yo"},
      { "pkg": "mocha",      "cmd": "mocha"}
    ]
  }
}

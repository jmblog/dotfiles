{
  "run_list": [
    "recipe[homebrew]",
    "recipe[dotfiles]"
  ],
  
  "brew": {
    "packages": [
      "coreutils",
      "ack",
      "bash-completion",
      "tree",
      "wget",
      "colordiff"
    ]
  },
  
  "links": { 
    "bash/bashrc":       ".bashrc",
    "bash/bash_profile": ".bash_profile",
    "git/gitattributes": ".gitattributes",
    "git/gitconfig":     ".gitconfig",
    "git/gitignore":     ".gitignore",
    "vim":               ".vim",
    "vim/vimrc":         ".vimrc"
  },

  "nodejs": {
    "versions": [
      "v0.10.10"
    ],
    "use": "v0.10.10",
    "packages": {
      "bower":     "bower",
      "grunt-cli": "grunt",
      "jshint":    "jshint",
      "uglify-js": "uglifyjs",
      "yo":        "yo"
    }
  },

  "perl": {
    "versions": [
      "perl-5.18.0"
    ],
    "use": "perl-5.18.0"
  }

}

{
  "run_list": [
    "recipe[homebrew]",
    "recipe[dotfiles]"
  ],
  
  "brew": {
    "packages": [
      "coreutils",
      "ack",
      "bash-completion",
      "tree",
      "wget",
      "colordiff",
      "phantomjs"
    ]
  },

  "copies": {
    "git/gitconfig":     ".gitconfig"
  },
   
  "links": { 
    "bash/bashrc":       ".bashrc",
    "bash/bash_profile": ".bash_profile",
    "git/gitattributes": ".gitattributes",
    "git/gitignore":     ".gitignore",
    "vim":               ".vim",
    "vim/vimrc":         ".vimrc"
  },

  "nodejs": {
    "versions": [
      "v0.10.10"
    ],
    "use": "v0.10.10",
    "packages": {
      "bower":     "bower",
      "grunt-cli": "grunt",
      "grunt-init": "grunt-init",
      "jshint":    "jshint",
      "uglify-js": "uglifyjs",
      "yo":        "yo",
      "mocha":     "mocha"
    }
  }
}

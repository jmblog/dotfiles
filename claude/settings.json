{
  "env": {
    "DISABLE_MICROCOMPACT": "true",
    "ENABLE_TOOL_RESEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(git commit:*)",
      "Bash(npm:*)",
      "Bash(gh:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(mv:*)",
      "Bash(npx:*)",
      "Bash(osascript:*)",
      "Bash(rg:*)",
      "Bash(gemini-google-search:*)",
      "Bash(afplay:*)",
      "Bash(dbt-helper:*)",
      "Bash(dbt:*)",
      "Bash(sqlfluff:*)",
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(sed:*)",
      "Write(~/.claude/continuity/**)",
      "Write(/Users/jimbo/.claude/continuity/**)",
      "Edit(~/.claude/continuity/**)",
      "Edit(/Users/jimbo/.claude/continuity/**)",
      "Update(~/.claude/continuity/**)",
      "Update(/Users/jimbo/.claude/continuity/**)",
      "Write(~/.claude/plans/**)",
      "Write(/Users/jimbo/.claude/plans/**)",
      "Edit(~/.claude/plans/**)",
      "Edit(/Users/jimbo/.claude/plans/**)",
      "Update(~/.claude/plans/**)",
      "Update(/Users/jimbo/.claude/plans/**)",
      "Coderabbit",
      "Bash(claude:*)",
      "Bash(tree:*)"
    ],
    "deny": [
      "Bash(git config :*)",
      "Bash(brew install :*)",
      "Bash(chmod 777 :*)",
      "Bash(rm -rf /*)",
      "Bash(gh repo delete:*)",
      "Bash(sudo:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  },
  "model": "claude-opus-4-6",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py",
            "timeout": 86400
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit(**)",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ $FILE == *.ts || $FILE == *.tsx ]]; then npx tsc --noEmit $FILE; fi"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      },
      {
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/deny-check.sh"
          }
        ]
      },
      {
        "matcher": "Update(~/.claude/continuity/**)",
        "hooks": [
          {
            "type": "command",
            "command": "exit 0"
          }
        ]
      },
      {
        "matcher": "Write(~/.claude/continuity/**)",
        "hooks": [
          {
            "type": "command",
            "command": "exit 0"
          }
        ]
      },
      {
        "matcher": "Edit(~/.claude/continuity/**)",
        "hooks": [
          {
            "type": "command",
            "command": "exit 0"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          },
          {
            "type": "command",
            "command": "bash ~/.dotfiles/claude/scripts/sync-agent-skills.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Blow.aiff"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.claude/hooks/claude-island-state.py"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "atlassian@claude-plugins-official": true,
    "code-analyzer@ubie-plugins": true,
    "code-simplifier@claude-plugins-official": true,
    "dig@kuu-marketplace": true,
    "git-workflow@ubie-plugins": true,
    "jmblog-plugins@jmblog-plugins": true,
    "mr@ubie-plugins": true,
    "swift-lsp@claude-plugins-official": true
  },
  "language": "Japanese",
  "skipDangerousModePermissionPrompt": true,
  "effortLevel": "medium"
}

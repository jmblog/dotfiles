# The next line enables shell command completion for gcloud.
if [ -f '/Users/jimbo/Downloads/google-cloud-sdk/completion.zsh.inc' ]; then . '/Users/jimbo/Downloads/google-cloud-sdk/completion.zsh.inc'; fi

